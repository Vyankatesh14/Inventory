@model Unioteq.TrackNTrace.Models.Machine.MachinePartView

@{
    ViewBag.Title = "Edit Machine Part";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Row start -->
<div class="row gx-3">
    <div class="col"></div>
    <div class="col-6">
        @using (Html.BeginForm("Edit", "MachinePart", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@ViewBag.Title</h5>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.HiddenFor(model => model.MachinePartId)
                                @Html.LabelFor(model => model.MachinePartName, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.MachinePartName, new { htmlAttributes = new { @class = "form-control" } })
                                <span asp-validation-for="MachinePartName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.MachineName, htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownListFor(model => model.MachineId, (SelectList)ViewBag.MachineList, "----- Select -----", new { @class = "form-control" })
                                <span asp-validation-for="MachineId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.MachinePartImage, htmlAttributes: new { @class = "form-label" })
                                <input type="file" name="MachinePartImage" class="form-control" />
                                <span asp-validation-for="MachinePartImage" class="text-danger"></span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.MachinePartImagePath))
                            {
                                <div class="mb-3">
                                    <img src="@Url.Content("~/MachinePartImage/" + Model.MachinePartImagePath)" class="img-thumbnail" alt="Machine Part Image" />
                                </div>
                            }
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "form-label" })
                                @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        }
    </div>
    <div class="col"></div>
</div>
<!-- Row end -->
