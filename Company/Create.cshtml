@model Unioteq.TrackNTrace.Models.Machine.CompanyView

@{
    ViewBag.Title = "Create Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Row start -->
<div class="row gx-3">
    <div class="col-12 col-md-8 offset-md-2">
        @using (Html.BeginForm("Create", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@ViewBag.Title</h5>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-12 mb-3">
                            @Html.LabelFor(model => model.CompanyName, new { @class = "form-label" })
                            @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-lg-6 col-sm-12 mb-3">
                        @Html.LabelFor(model => model.CompLogo, new { @class = "form-label" })
                        <input asp-for="CompLogo" type="file" class="form-control" />
                        @Html.ValidationMessageFor(model => model.CompLogo, "", new { @class = "text-danger" })
                    </div>


                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-12 mb-3">
                            @Html.LabelFor(model => model.CompCorpAdd, new { @class = "form-label" })
                            @Html.EditorFor(model => model.CompCorpAdd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompCorpAdd, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-12 mb-3">
                            @Html.LabelFor(model => model.CompClientAdd, new { @class = "form-label" })
                            @Html.EditorFor(model => model.CompClientAdd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompClientAdd, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-12 mb-3">
                            @Html.LabelFor(model => model.CompCode, new { @class = "form-label" })
                            @Html.EditorFor(model => model.CompCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompCode, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-12 mb-3">
                            @Html.LabelFor(model => model.IsActive, new { @class = "form-label" })
                            <div class="form-check form-switch">
                                @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input", @id = "IsActiveSwitch" })
                                @Html.LabelFor(model => model.IsActive, new { @class = "form-check-label", @for = "IsActiveSwitch" })
                            </div>
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
           </div> 

                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a class="btn btn-outline-danger" href="@Url.Action("Index", "Company")">Cancel</a>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
           
        }
    </div>
</div>

