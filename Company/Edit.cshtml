@model Unioteq.TrackNTrace.Models.Machine.CompanyView

@{
    ViewBag.Title = "Edit Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Row start -->
<div class="row gx-3">
    <div class="col"></div>
    <div class="col-6">
        @using (Html.BeginForm("Edit", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@ViewBag.Title</h5>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.HiddenFor(model => model.CompId)
                                @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.HiddenFor(model => model.CompId)
                                @Html.LabelFor(model => model.CompCorpAdd, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.CompCorpAdd, new { htmlAttributes = new { @class = "form-control" } })
                                <span asp-validation-for="CompCorpAdd" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.HiddenFor(model => model.CompId)
                                @Html.LabelFor(model => model.CompClientAdd, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.CompClientAdd, new { htmlAttributes = new { @class = "form-control" } })
                                <span asp-validation-for="CompClientAdd" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.HiddenFor(model => model.CompId)
                                @Html.LabelFor(model => model.CompCode, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.CompCode, new { htmlAttributes = new { @class = "form-control" } })
                                <span asp-validation-for="CompCode" class="text-danger"></span>
                            </div>
                        </div>
                       
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.CompLogo, htmlAttributes: new { @class = "form-label" })
                                <input type="file" name="CompLogo" class="form-control" />
                                <span asp-validation-for="CompLogo" class="text-danger"></span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.CompLogoPath))
                            {
                                <div class="mb-3">
                                    <img src="@Url.Content("~/Company/" + Model.CompLogoPath)" class="img-thumbnail" alt="Company Image" />
                                </div>
                            }
                        </div>
                        <div class=" gx-3">
                            <div class="col-lg-6 col-sm-6 col-12">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "form-lable" })
                                    <div class="form-check form-switch">
                                        @Html.CheckBoxFor(model => model.IsActive, new { id = "IsActiveSwitch", @class = "form-check-input", @role = "switch" })
                                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "form-check-lable", @for = "" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        }
    </div>
    <div class="col"></div>
</div>
<!-- Row end -->
