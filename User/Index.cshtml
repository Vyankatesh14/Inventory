@model IEnumerable<Unioteq.TrackNTrace.Models.Entity.UserEntity>

@{
    ViewBag.Title = "User List";
}


<!-- Row start -->
<div class="row gx-3">
    <div class="col-xxl-12">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title">@ViewBag.Title</h5>
                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Create", "User")">
                    <i class="bi bi-plus-square"></i> Create New
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="myTable" class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Contact)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.DepartmentId)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PlantId)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.RoleId)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contact)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartmentId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlantId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleId)
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge border border-success text-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge border border-danger text-danger">Inactive</span>
                                        }
                                    </td>


                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |

                                        @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { onclick = "return confirm('are you sure you want to delete this record?');" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row end -->
@section scripts {
    <!-- DataTable JS -->
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.bootstrap5.js"></script>

    <script>
        $('#myTable').DataTable();
