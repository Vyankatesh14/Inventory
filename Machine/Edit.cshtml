@model Unioteq.TrackNTrace.Models.Machine.MachineView

@{
    ViewBag.Title = "Edit Machine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Row start -->
<div class="row gx-3">
    <div class="col"></div>
    <div class="col-6">
        @using (Html.BeginForm("Edit", "Machine", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@ViewBag.Title</h5>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.HiddenFor(model => model.MachineId)
                                @Html.LabelFor(model => model.MachineCode, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.MachineCode, new { htmlAttributes = new { @class = "form-control" } })
                                <span asp-validation-for="MachineCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.MachineName, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.MachineName, new { htmlAttributes = new { @class = "form-control" } })
                                <span asp-validation-for="MachineName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg-12 col-sm-12 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.MachineDetail, htmlAttributes: new { @class = "form-label" })
                                @Html.TextAreaFor(model => model.MachineDetail, new { @class = "form-control" })
                                <span asp-validation-for="MachineDetail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.LineId, htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownListFor(model => model.LineId, ViewBag.LineList as SelectList, "----- Select -----", new { @class = "form-control" })
                                <span asp-validation-for="LineId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.MachineManual, htmlAttributes: new { @class = "form-label" })
                                <input type="file" class="form-control" name="MachineManual" />
                                <span asp-validation-for="MachineManual" class="text-danger"></span>

                                <!-- Display link to current manual if it exists -->
                                @if (!string.IsNullOrEmpty(Model.MachineManualPath))
                                {
                                    <div class="mt-2">
                                        <a href="@Url.Content($"~/MachineManual/{Model.MachineManualPath}")" target="_blank">View Current Manual</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "form-label" })
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.IsActive, new { id = "IsActiveSwitch", @class = "form-check-input", @role = "switch" })
                                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "form-check-label", @for = "IsActiveSwitch" })
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a class="btn btn-outline-danger" href="@Url.Action("Index")">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col"></div>
</div>
<!-- Row end -->
