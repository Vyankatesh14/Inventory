@model IEnumerable<Unioteq.TrackNTrace.Models.Entity.PlantEntity>

@{
    ViewBag.Title = "Plant List";
}

<!-- Row start -->
<div class="row gx-3">
    <div class="col-xxl-12">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title">@ViewBag.Title</h5>
                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Create", "Plant")">
                    <i class="bi bi-plus-square"></i> Create New
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="userTable" class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PlantId)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PlantName)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PlantCode)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PlantAddress)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlantId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlantName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlantCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlantAddress)
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge border border-success text-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge border border-danger text-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.PlantId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.PlantId }, new { onclick = "return confirm('Are you sure you want to delete this Plant?');" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row end -->
@section scripts {
    <!-- DataTable JS -->
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.bootstrap5.js"></script>

    <script>
        $('#userTable').DataTable();
    </script>
}
