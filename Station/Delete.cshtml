@model Unioteq.TrackNTrace.Models.Entity.StationEntity

<!DOCTYPE html>
<html lang="en">

@{
    ViewBag.Title = "Delete Station";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container-fluid mt-2">
        <div class="page-header">
            <strong>Delete Station</strong>
        </div>
        <div class="widget">
            <!-- Delete confirmation message starts here -->
            <h3>Are you sure you want to delete this station?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StationCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StationCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StationName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StationName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StationDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StationDescription)
                </dd>
            </dl>
            <br />
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.StationId" method="post">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
            <!-- Delete confirmation message ends here -->
        </div>
    </div>
</body>
</html>
